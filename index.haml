%html.no-js{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}
    %meta{:'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge'}
    %title Gently &middot; Three heads are better than one
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1'}
    / Fonts
    %link{:type => 'text/css', :media => 'screen', :rel => 'stylesheet', :href => 'http://fonts.googleapis.com/css?family=Varela+Round'}
    %link{:type => 'text/css', :media => 'screen', :rel => 'stylesheet', :href => 'assets/css/font-awesome.min.css'}
    / Stylesheets
    %link{:type => 'text/css', :media => 'screen', :rel => 'stylesheet', :href => 'assets/css/bootstrap.min.css'}
    %link{:type => 'text/css', :media => 'screen', :rel => 'stylesheet', :href => 'assets/css/style.css'}
  %body.home
    %nav.navbar.navbar-fixed-top
      .container
        .row
          .col-md-12
            .navbar-header
              %button.navbar-toggle.collapsed{:type => 'button', :'data-toggle' => 'collapse', :'data-target' => '#navbar-collapse'}
                - 3.times do
                  %span.icon-bar
              %a.navbar-brand{:href => '#'}
                Gently
            .navbar-collapse.collapse#navbar-collapse
              %ul.nav.navbar-nav.navbar-right
                %li.active
                  %a{:href => '#'} Home
                %li.dropdown
                  %a.dropdown-toggle{:href => '#', :'data-toggle' => 'dropdown', :role => 'button', :'aria-expanded' => 'false'} Team
                  %ul.dropdown-menu{:role => 'menu'}
                    %li
                      %a{:href => '#'} Andy Tran
                    %li
                      %a{:href => '#'} Justin Kwak
                    %li.dropdown
                      %a.dropdown-toggle{:href => '#', :'data-toggle' => 'dropdown', :role => 'button', :'aria-expanded' => 'false'} Andrew Shen
                      %ul.dropdown-menu{:role => 'menu'}
                        %li
                          %a{:href => '#'} Website
                        %li
                          %a{:href => '#'} Dribbble
                        %li
                          %a{:href => '#'} BeHance
                %li
                  %a{:href => '#'} Work
                %li
                  %a.btn.btn-default.navbar-btn{:href => '#'} Contact
    %section.hero
      .container
        .row
          .col-md-12.text-center
            %h1 Two heads are better than one.
            %p We are a 3 unique individuals who together form a kick ass web development team!
            .btn-group
              %a.btn.btn-hero{:href => '#'}
              %a See our case studies
    %script{:src => 'assets/js/jquery-1.11.3.min.js'}
    %script{:src => 'assets/js/modernizr.js'}
    %script{:src => 'assets/js/bootstrap.min.js'}
    %script{:src => 'assets/js/scrollReveal.js'}
    %script{:src => 'assets/js/script.js'}